# Include xavier-rc Configuration
if [ -f ~/.xavier-config/zsh/.xavier-rc ]; then
    source ~/.xavier-config/zsh/.xavier-rc
else
    print "xavier-rc not found!"
fi

# ZSH Plugins
plugins=(
    git
    tmux
    history-substring-search
)

# Path to your oh-my-zsh installation.
export ZSH="/Users/YOURUSERNAME/.oh-my-zsh"
source $ZSH/oh-my-zsh.sh
